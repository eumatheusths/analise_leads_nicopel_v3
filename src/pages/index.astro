---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import { getAuthSheets, SPREADSHEET_ID, getCurrentMonthSheetName, MONTHS, findRealSheetName } from '../lib/sheets';

const urlMonth = Astro.url.searchParams.get('month');
const selectedMonth = urlMonth || getCurrentMonthSheetName();

let errorMsg = null;
let metrics = { total: 0, organicos: 0, qualificados: 0, vendas: 0, desqualificados: 0, faturamento: 0 };

// Dados para os Gr√°ficos
let chartData = { 
    origem: {}, 
    segmento: {}, 
    vendedor: {}, 
    perda: {},
    ondeEncontrou: {}, 
    organicoVsAds: { org: 0, ads: 0 } 
};

let closedSalesList = [];
let top5LossReasons = [];
let realSheetName = selectedMonth;

try {
    const sheets = await getAuthSheets();
    
    // 1. Acha o nome certo da aba
    const foundName = await findRealSheetName(sheets, selectedMonth);
    if (foundName) realSheetName = foundName;

    // 2. Puxa os dados
    const monthResponse = await sheets.spreadsheets.values.get({
        spreadsheetId: SPREADSHEET_ID,
        range: `'${realSheetName}'!A2:L1000`, 
    }).catch(() => ({ data: { values: [] } }));

    const monthRows = monthResponse.data.values || [];
    metrics.total = monthRows.length;

    let lossCountMap = {};

    monthRows.forEach(row => {
        // Leitura das colunas com prote√ß√£o contra vazio
        const cliente = row[0] || 'Sem nome';
        const origem = (row[2] || 'N√£o Informado').trim();
        const segmento = (row[4] || 'Outros').trim();
        const ondeEncontrou = (row[6] || 'N√£o detalhado').trim();
        const qualificado = (row[7] || '').toLowerCase().trim();
        const venda = (row[8] || '').toLowerCase().trim();
        const motivoRaw = row[9] || ''; 
        
        let vendedor = row[10] || 'Sem Respons√°vel';
        if (vendedor.trim() === '' || vendedor.toLowerCase().includes('diretoria')) {
            vendedor = 'Sem Respons√°vel';
        }

        const valorStr = row[11] ? row[11].replace('R$', '').replace(/\./g, '').replace(',', '.').trim() : '0';
        const valorFloat = parseFloat(valorStr) || 0;

        // Regra: Org√¢nico vs Pago
        const origemLow = origem.toLowerCase();
        let isPago = false;
        if (origemLow.includes('ads') || 
            origemLow.includes('instagram') || 
            origemLow.includes('face') || 
            origemLow.includes('google') || 
            origemLow.includes('patrocinado') || 
            origemLow.includes('rd') || 
            origemLow.includes('outros')) {
            isPago = true;
        }

        // M√©tricas dos Cards
        if (!isPago) metrics.organicos++;
        if (qualificado === 'sim') metrics.qualificados++;
        if (qualificado === 'n√£o') metrics.desqualificados++;
        
        if (venda === 'sim') {
            metrics.vendas++;
            metrics.faturamento += valorFloat;
            closedSalesList.push({ cliente, valor: valorFloat, segmento, origem, vendedor });
        } else {
            // Se n√£o vendeu e tem motivo escrito, conta como perda
            if (motivoRaw.trim().length > 1) {
                const motivoFormatado = motivoRaw.trim().charAt(0).toUpperCase() + motivoRaw.trim().slice(1).toLowerCase();
                lossCountMap[motivoFormatado] = (lossCountMap[motivoFormatado] || 0) + 1;
            }
        }

        // Popula Gr√°ficos
        chartData.origem[origem] = (chartData.origem[origem] || 0) + 1;
        chartData.segmento[segmento] = (chartData.segmento[segmento] || 0) + 1;
        chartData.vendedor[vendedor] = (chartData.vendedor[vendedor] || 0) + 1;
        
        if (ondeEncontrou.length > 1) {
            const ondeClean = ondeEncontrou.charAt(0).toUpperCase() + ondeEncontrou.slice(1).toLowerCase();
            chartData.ondeEncontrou[ondeClean] = (chartData.ondeEncontrou[ondeClean] || 0) + 1;
        }

        if (isPago) chartData.organicoVsAds.ads++;
        else chartData.organicoVsAds.org++;
    });

    closedSalesList.sort((a, b) => b.valor - a.valor);

    top5LossReasons = Object.entries(lossCountMap)
        .sort((a, b) => b[1] - a[1])
        .slice(0, 5)
        .map(([motivo, qtd]) => ({ motivo, qtd }));

} catch (e) {
    errorMsg = "Erro: " + e.message;
}

const chartsJSON = JSON.stringify(chartData);
---

<Layout title="Dashboard">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
        <div>
            <h2 class="text-2xl md:text-3xl font-bold text-gray-800">Dashboard Nicopel</h2>
            <p class="text-gray-500 text-sm">Vis√£o Mensal: <span class="font-bold text-blue-600 uppercase">{realSheetName}</span></p>
        </div>
        
        <form method="GET" class="bg-white p-2 rounded-lg border shadow-sm flex items-center gap-2 w-full md:w-auto">
            <span class="text-xs font-bold text-gray-500 uppercase px-2 whitespace-nowrap">M√™s:</span>
            <select name="month" onchange="this.form.submit()" class="bg-gray-100 border-transparent rounded text-sm font-bold text-gray-700 focus:ring-0 py-2 px-3 cursor-pointer w-full md:w-auto outline-none">
                {MONTHS.map(m => (
                    <option value={m} selected={m === selectedMonth}>{m}</option>
                ))}
            </select>
        </form>
    </div>

    {errorMsg && <div class="bg-red-100 text-red-700 p-4 rounded mb-4 font-bold">{errorMsg}</div>}

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-6 gap-4 mb-8">
        <Card title="Total Leads" value={metrics.total} color="blue" icon="üë•" />
        <Card title="Org√¢nicos" value={metrics.organicos} color="green" icon="üåø" />
        <Card title="Qualificados" value={metrics.qualificados} color="indigo" icon="‚≠ê" />
        <Card title="Vendas" value={metrics.vendas} color="emerald" icon="üí∞" />
        <Card title="Desqualificados" value={metrics.desqualificados} color="red" icon="üö´" />
        <Card title="Faturamento" value={new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(metrics.faturamento)} color="yellow" icon="üí≤" isMoney={true} />
    </div>

    <div class="grid grid-cols-1 xl:grid-cols-2 gap-6 mb-8">
        
        <div class="space-y-6">
            <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
                <h3 class="text-lg font-bold text-gray-800 mb-6 flex items-center gap-2">‚ùå Top 5 Motivos de Perda</h3>
                <div class="flex flex-col gap-3">
                    {top5LossReasons.length === 0 ? (
                        <p class="text-gray-400 text-sm text-center py-4">Nenhuma perda com motivo registrado.</p>
                    ) : (
                        top5LossReasons.map((item, index) => (
                            <div class={`flex justify-between items-center p-3 rounded-lg ${index === 1 ? 'bg-gray-50' : 'bg-white border-b border-gray-50'}`}>
                                <div class="flex gap-3 items-start">
                                    <span class="text-gray-400 font-bold min-w-[20px]">{index + 1}.</span>
                                    <span class="text-gray-700 text-sm font-medium leading-snug">{item.motivo}</span>
                                </div>
                                <span class="font-bold text-gray-800 ml-4">{item.qtd}</span>
                            </div>
                        ))
                    )}
                </div>
            </div>
            
            <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 overflow-hidden">
                <h3 class="text-lg font-bold text-gray-800 mb-4">üëî Leads por Vendedor</h3>
                <div id="chart-vendedor" class="h-64 w-full"></div>
            </div>
        </div>

        <div class="space-y-6">
             <div class="grid grid-cols-1 md:grid-cols-2 gap-6 h-full">
                <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 overflow-hidden">
                    <h4 class="text-xs font-bold text-gray-400 uppercase mb-4">Origem</h4>
                    <div id="chart-origem"></div>
                </div>
                <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 overflow-hidden">
                    <h4 class="text-xs font-bold text-gray-400 uppercase mb-4">Segmentos</h4>
                    <div id="chart-segmento"></div>
                </div>
                <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 col-span-1 md:col-span-2 overflow-hidden">
                    <h4 class="text-xs font-bold text-gray-400 uppercase mb-4">Org√¢nico vs Pago</h4>
                    <div id="chart-ads"></div>
                </div>
             </div>
        </div>
    </div>

    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 mb-8 overflow-hidden">
        <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
            üîé Onde nos Encontrou
        </h3>
        <div id="chart-onde" class="h-72"></div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-200 mb-12">
        <div class="p-6 border-b border-gray-200 bg-gray-50 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-2">
            <div>
                <h3 class="text-xl font-bold text-gray-800">üí∞ Vendas Fechadas</h3>
                <p class="text-sm text-gray-500">Detalhes deste m√™s</p>
            </div>
            <span class="bg-green-100 text-green-800 text-xs font-bold px-3 py-1 rounded-full">
                {closedSalesList.length} Vendas
            </span>
        </div>
        
        <div class="overflow-x-auto max-h-[500px] overflow-y-auto">
            <table class="min-w-full text-sm text-left">
                <thead class="bg-gray-100 text-gray-600 font-bold uppercase text-xs sticky top-0 z-10 shadow-sm">
                    <tr>
                        <th class="px-6 py-4 whitespace-nowrap">Cliente</th>
                        <th class="px-6 py-4 whitespace-nowrap">Valor</th>
                        <th class="px-6 py-4 whitespace-nowrap">Segmento</th>
                        <th class="px-6 py-4 whitespace-nowrap">Origem</th>
                        <th class="px-6 py-4 whitespace-nowrap">Vendedor</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    {closedSalesList.length === 0 ? (
                        <tr><td colspan="5" class="p-8 text-center text-gray-400">Nenhuma venda neste m√™s.</td></tr>
                    ) : (
                        closedSalesList.map(venda => (
                            <tr class="hover:bg-green-50 transition">
                                <td class="px-6 py-4 font-bold text-gray-800 whitespace-nowrap">{venda.cliente}</td>
                                <td class="px-6 py-4 font-mono font-bold text-green-700 whitespace-nowrap">
                                    {new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(venda.valor)}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap"><span class="bg-blue-50 text-blue-700 px-2 py-1 rounded text-xs font-bold">{venda.segmento}</span></td>
                                <td class="px-6 py-4 text-gray-600 whitespace-nowrap">{venda.origem}</td>
                                <td class="px-6 py-4 text-gray-500 text-xs uppercase font-bold whitespace-nowrap">{venda.vendedor}</td>
                            </tr>
                        ))
                    )}
                </tbody>
            </table>
        </div>
    </div>

    <div id="chart-data" data-json={chartsJSON} class="hidden"></div>
    
    <script>
        // Fun√ß√£o para inicializar os gr√°ficos apenas quando a p√°gina carregar
        function initCharts() {
            // Verifica se o ApexCharts carregou
            if (typeof ApexCharts === 'undefined') {
                console.warn("ApexCharts ainda n√£o carregou. Tentando novamente...");
                setTimeout(initCharts, 100); // Tenta de novo em 100ms
                return;
            }

            const dataElement = document.getElementById('chart-data');
            if(!dataElement) return;

            const rawData = JSON.parse(dataElement.dataset.json);

            const commonOpts = {
                chart: { type: 'bar', height: 250, toolbar: {show: false}, fontFamily: 'inherit', parentHeightOffset: 0 },
                colors: ['#3B82F6', '#10B981', '#F59E0B', '#EF4444', '#8B5CF6'],
                plotOptions: { bar: { borderRadius: 3, horizontal: true } },
                dataLabels: { enabled: false },
                grid: { strokeDashArray: 4, padding: { left: 10, right: 10 } }
            };

            // Vendedores
            const vends = Object.entries(rawData.vendedor).sort((a,b) => b[1] - a[1]);
            if(document.querySelector("#chart-vendedor")) {
                new ApexCharts(document.querySelector("#chart-vendedor"), {
                    ...commonOpts,
                    chart: { type: 'bar', height: 250, toolbar: {show: false} }, 
                    plotOptions: { bar: { borderRadius: 3, horizontal: false, columnWidth: '50%' } },
                    colors: ['#8B5CF6'],
                    series: [{ name: 'Leads', data: vends.map(x => x[1]) }],
                    xaxis: { categories: vends.map(x => x[0]) }
                }).render();
            }

            // Origem
            if(document.querySelector("#chart-origem")) {
                new ApexCharts(document.querySelector("#chart-origem"), {
                    series: Object.values(rawData.origem),
                    labels: Object.keys(rawData.origem),
                    chart: { type: 'donut', height: 220 },
                    legend: { position: 'bottom', fontSize: '11px' },
                    dataLabels: { enabled: false }
                }).render();
            }

            // Segmento
            const segs = Object.entries(rawData.segmento).sort((a,b) => b[1] - a[1]).slice(0, 5);
            if(document.querySelector("#chart-segmento")) {
                new ApexCharts(document.querySelector("#chart-segmento"), {
                    ...commonOpts,
                    chart: { type: 'bar', height: 220, toolbar: {show: false} },
                    series: [{ name: 'Leads', data: segs.map(x => x[1]) }],
                    xaxis: { categories: segs.map(x => x[0]) }
                }).render();
            }

            // Ads vs Org
            if(document.querySelector("#chart-ads")) {
                new ApexCharts(document.querySelector("#chart-ads"), {
                    series: [rawData.organicoVsAds.org, rawData.organicoVsAds.ads],
                    labels: ['Org√¢nico', 'Pago'],
                    chart: { type: 'pie', height: 200 },
                    colors: ['#10B981', '#3B82F6'],
                    legend: { position: 'right' }
                }).render();
            }

            // Onde Encontrou
            const ondeData = Object.entries(rawData.ondeEncontrou).sort((a,b) => b[1] - a[1]).slice(0, 10);
            if(document.querySelector("#chart-onde")) {
                new ApexCharts(document.querySelector("#chart-onde"), {
                    ...commonOpts,
                    chart: { type: 'bar', height: 300, toolbar: {show: false} },
                    colors: ['#6366f1'],
                    series: [{ name: 'Ocorr√™ncias', data: ondeData.map(x => x[1]) }],
                    xaxis: { categories: ondeData.map(x => x[0]) }
                }).render();
            }
        }

        // Inicia quando o DOM estiver pronto
        window.addEventListener('load', initCharts);
    </script>
</Layout>