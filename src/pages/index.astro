    <div id="chart-data" data-json={chartsJSON} class="hidden"></div>
    
    <script>
        function initCharts() {
            if (typeof ApexCharts === 'undefined') { setTimeout(initCharts, 100); return; }
            const dataElement = document.getElementById('chart-data');
            if(!dataElement) return;
            const rawData = JSON.parse(dataElement.dataset.json);

            const baseFont = "Inter, sans-serif";
            const palette = ['#3b82f6', '#10b981', '#f59e0b', '#ef4444', '#8b5cf6', '#ec4899', '#06b6d4', '#84cc16'];

            const commonOpts = {
                chart: { fontFamily: baseFont, toolbar: {show:false}, background: 'transparent' },
                dataLabels: { enabled: false },
                grid: { borderColor: '#f1f5f9', strokeDashArray: 4 },
                colors: palette,
                tooltip: { theme: 'light' }
            };

            const vends = Object.entries(rawData.vendedor).sort((a,b) => b[1] - a[1]);
            if(document.querySelector("#chart-vendedor")) {
                new ApexCharts(document.querySelector("#chart-vendedor"), { ...commonOpts, chart: { type: 'bar', height: 260, toolbar: {show:false} }, plotOptions: { bar: { borderRadius: 4, columnWidth: '40%', distributed: true } }, series: [{ name: 'Leads', data: vends.map(x => x[1]) }], xaxis: { categories: vends.map(x => x[0]), labels: {style:{colors:'#64748b', fontSize:'10px'}} }, legend: { show: false } }).render();
            }

            // ORIGEM EM BARRAS HORIZONTAIS
            const origens = Object.entries(rawData.origem).sort((a,b) => b[1] - a[1]);
            if(document.querySelector("#chart-origem")) {
                new ApexCharts(document.querySelector("#chart-origem"), { ...commonOpts, chart: { type: 'bar', height: 260, toolbar: {show:false} }, plotOptions: { bar: { borderRadius: 3, horizontal: true, barHeight: '55%', distributed: true } }, series: [{ name: 'Leads', data: origens.map(x => x[1]) }], xaxis: { categories: origens.map(x => x[0]), labels: {style:{colors:'#64748b'}} }, legend: { show: false } }).render();
            }

            const segs = Object.entries(rawData.segmento).sort((a,b) => b[1] - a[1]).slice(0, 5);
            if(document.querySelector("#chart-segmento")) {
                new ApexCharts(document.querySelector("#chart-segmento"), { ...commonOpts, chart: { type: 'bar', height: 260, toolbar: {show:false} }, plotOptions: { bar: { borderRadius: 3, horizontal: true, barHeight: '50%', distributed: true } }, series: [{ name: 'Leads', data: segs.map(x => x[1]) }], xaxis: { categories: segs.map(x => x[0]), labels: {style:{colors:'#64748b'}} }, legend: { show: false } }).render();
            }

            // STATUS GURU EM ROSCA
            const statusData = Object.entries(rawData.statusGuru).sort((a,b) => b[1] - a[1]).slice(0, 8);
            if(document.querySelector("#chart-status")) {
                new ApexCharts(document.querySelector("#chart-status"), { ...commonOpts, chart: { type: 'donut', height: 320 }, series: statusData.map(x => x[1]), labels: statusData.map(x => x[0]), stroke: { width: 0 }, legend: { position: 'bottom', fontSize: '11px', labels: { colors: '#475569' } }, plotOptions: { pie: { donut: { size: '65%', labels: { show: true, total: { show: true, showAlways:true, fontSize: '14px', fontWeight: 600, color: '#1e293b' } } } } } }).render();
            }
        }
        window.addEventListener('load', initCharts);
    </script>
</Layout>