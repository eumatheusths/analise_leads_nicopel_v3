---
import { getAuthSheets, SPREADSHEET_ID } from '../lib/sheets';

let success = false;
let error = null;

if (Astro.request.method === "POST") {
    try {
        const data = await Astro.request.formData();
        const email = data.get('email');
        const password = data.get('password');
        const nome = data.get('nome');

        const sheets = await getAuthSheets();
        
        // Adiciona na aba USUARIOS com status PENDENTE
        await sheets.spreadsheets.values.append({
            spreadsheetId: SPREADSHEET_ID,
            range: `'USUARIOS'!A:D`,
            valueInputOption: 'USER_ENTERED',
            requestBody: { values: [[email, password, nome, 'Pendente']] },
        });

        success = true;
    } catch (e) {
        error = "Erro ao solicitar: " + e.message;
    }
}
---

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Solicitar Acesso - Nicopel</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 h-screen flex items-center justify-center p-4">
    <div class="bg-white p-8 rounded-xl shadow-lg w-full max-w-md border border-gray-200">
        <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Solicitar Acesso</h2>

        {success ? (
            <div class="text-center">
                <div class="text-5xl mb-4">✅</div>
                <h3 class="text-xl font-bold text-gray-800">Solicitação Enviada!</h3>
                <p class="text-gray-600 my-4">Avise o administrador (Matheus) para liberar seu acesso na planilha.</p>
                <a href="/login" class="block w-full bg-slate-800 text-white font-bold py-3 rounded-lg">Voltar para Login</a>
            </div>
        ) : (
            <form method="POST" class="space-y-4">
                {error && <div class="text-red-600 text-sm bg-red-50 p-2 rounded">{error}</div>}
                
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Seu Nome</label>
                    <input type="text" name="nome" required class="w-full border p-3 rounded-lg bg-gray-50">
                </div>
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">E-mail</label>
                    <input type="email" name="email" required class="w-full border p-3 rounded-lg bg-gray-50">
                </div>
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Crie uma Senha</label>
                    <input type="password" name="password" required class="w-full border p-3 rounded-lg bg-gray-50">
                </div>

                <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 rounded-lg transition">
                    ENVIAR SOLICITAÇÃO
                </button>
                
                <div class="text-center mt-4">
                    <a href="/login" class="text-sm text-gray-500 hover:underline">Já tenho conta</a>
                </div>
            </form>
        )}
    </div>
</body>
</html>