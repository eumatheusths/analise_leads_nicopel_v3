import Layout from '../layouts/Layout.astro';
import { getAuthSheets, SPREADSHEET_ID, MONTHS, getCurrentMonthSheetName, findRealSheetName } from '../lib/sheets';

const urlMonth = Astro.url.searchParams.get('month');
const selectedMonth = urlMonth || getCurrentMonthSheetName();

let stats = {
    investimento: 0,
    faturamentoPago: 0,
    vendasPagas: 0,
    leadsPagos: 0,
    roas: 0,
    roi: 0,
    lucro: 0
};

let ltvStats = {
    projecaoExtra: 0,
    faturamentoTotalLTV: 0,
    roasLTV: 0
};

let errorMsg = null;
let successMsg = null;

// --- 1. PROCESSAMENTO DE DADOS (SERVIDOR) ---
try {
    const sheets = await getAuthSheets();
    
    // A. Busca o valor do INVESTIMENTO salvo na aba 'ROI' (apenas para persistÃªncia)
    // Vamos usar a linha 2 da aba ROI para guardar o investimento de cada mÃªs.
    const monthIndex = MONTHS.indexOf(selectedMonth);
    const colLetter = String.fromCharCode(66 + monthIndex); // B, C, D...
    
    // Tenta ler o investimento salvo
    try {
        const investRes = await sheets.spreadsheets.values.get({
            spreadsheetId: SPREADSHEET_ID,
            range: `'ROI'!${colLetter}2`
        });
        const savedInvest = investRes.data.values ? investRes.data.values[0][0] : "0";
        stats.investimento = parseFloat(savedInvest.replace('R$', '').replace(/\./g, '').replace(',', '.') || '0');
    } catch (e) {
        // Se der erro (ex: aba ROI nÃ£o existe), assume 0
        stats.investimento = 0;
    }

    // B. Se houver POST (Atualizar Investimento), salva na planilha e atualiza variÃ¡vel local
    if (Astro.request.method === "POST") {
        const formData = await Astro.request.formData();
        const novoInvestimento = parseFloat(formData.get('investimento') || '0');
        
        // Salva na aba ROI (Cria se nÃ£o existir, idealmente deve existir com cabeÃ§alhos)
        await sheets.spreadsheets.values.update({
            spreadsheetId: SPREADSHEET_ID,
            range: `'ROI'!${colLetter}2`,
            valueInputOption: 'USER_ENTERED',
            requestBody: { values: [[novoInvestimento]] }
        });
        
        stats.investimento = novoInvestimento;
        successMsg = "Valor de investimento atualizado.";
    }

    // C. Busca os Leads do MÃªs e CALCULA Faturamento Pago (AutomÃ¡tico)
    const realSheetName = await findRealSheetName(sheets, selectedMonth);
    if (realSheetName) {
        const leadsRes = await sheets.spreadsheets.values.get({
            spreadsheetId: SPREADSHEET_ID,
            range: `'${realSheetName}'!A2:O1000` // LÃª atÃ© coluna Valor (O)
        });
        
        const rows = leadsRes.data.values || [];
        
        rows.forEach(row => {
            const origem = (row[3] || '').toLowerCase(); // Coluna D
            const venda = (row[13] || '').toLowerCase(); // Coluna N
            const valorStr = row[14] ? row[14].replace('R$', '').replace(/\./g, '').replace(',', '.').trim() : '0';
            const valor = parseFloat(valorStr) || 0;

            // Filtro de TrÃ¡fego Pago
            if (origem.includes('ads') || origem.includes('instagram') || origem.includes('face') || origem.includes('google') || origem.includes('patrocinado')) {
                stats.leadsPagos++;
                if (venda === 'sim') {
                    stats.vendasPagas++;
                    stats.faturamentoPago += valor;
                }
            }
        });
    }

    // D. Realiza os CÃ¡lculos Finais
    stats.lucro = stats.faturamentoPago - stats.investimento;
    stats.roas = stats.investimento > 0 ? (stats.faturamentoPago / stats.investimento) : 0;
    stats.roi = stats.investimento > 0 ? ((stats.faturamentoPago - stats.investimento) / stats.investimento) * 100 : 0;

    // E. CÃ¡lculos de LTV (ProjeÃ§Ã£o)
    // Regra: 66% dos clientes compram mais 3 vezes
    const taxaRecompra = 0.66;
    const frequencia = 3;
    
    // Quanto vai entrar a mais?
    ltvStats.projecaoExtra = stats.faturamentoPago * taxaRecompra * frequencia;
    
    // Faturamento Total (Atual + Futuro)
    ltvStats.faturamentoTotalLTV = stats.faturamentoPago + ltvStats.projecaoExtra;
    
    // ROAS Projetado
    ltvStats.roasLTV = stats.investimento > 0 ? (ltvStats.faturamentoTotalLTV / stats.investimento) : 0;

} catch (e) {
    errorMsg = "Erro ao processar dados: " + e.message;
}
