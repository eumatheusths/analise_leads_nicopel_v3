---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import { getAuthSheets, SPREADSHEET_ID, getCurrentMonthSheetName, MONTHS, findRealSheetName } from '../lib/sheets';

const urlMonth = Astro.url.searchParams.get('month');
const selectedMonth = urlMonth || getCurrentMonthSheetName();

let errorMsg = null;
let metrics = { total: 0, organicos: 0, qualificados: 0, vendas: 0, desqualificados: 0, faturamento: 0 };

// Dados para GrÃ¡ficos
let chartData = { origem: {}, segmento: {}, vendedor: {}, organicoVsAds: { org: 0, ads: 0 } };

// Listas Especiais
let closedSalesList = []; // Lista de Vendas
let top5LossReasons = []; // Lista de Motivos de Perda (Top 5)

let realSheetName = selectedMonth;

try {
    const sheets = await getAuthSheets();
    
    const foundName = await findRealSheetName(sheets, selectedMonth);
    if (foundName) realSheetName = foundName;

    const monthResponse = await sheets.spreadsheets.values.get({
        spreadsheetId: SPREADSHEET_ID,
        range: `'${realSheetName}'!A2:L1000`, 
    }).catch(() => ({ data: { values: [] } }));

    const monthRows = monthResponse.data.values || [];
    metrics.total = monthRows.length;

    // Objeto temporÃ¡rio para contar motivos
    let lossCountMap = {};

    monthRows.forEach(row => {
        // Mapeamento
        const cliente = row[0] || 'Sem nome';
        const origem = (row[2] || 'NÃ£o Informado').trim();
        const segmento = (row[4] || 'Outros').trim();
        const qualificado = (row[7] || '').toLowerCase().trim();
        const venda = (row[8] || '').toLowerCase().trim();
        const motivoRaw = row[9] || ''; // Coluna J
        
        // Tratamento Vendedor (Coluna K)
        let vendedor = row[10] || 'Sem ResponsÃ¡vel';
        if (vendedor.trim() === '' || vendedor.toLowerCase().includes('diretoria')) {
            vendedor = 'Sem ResponsÃ¡vel';
        }

        const valorStr = row[11] ? row[11].replace('R$', '').replace(/\./g, '').replace(',', '.').trim() : '0';
        const valorFloat = parseFloat(valorStr) || 0;

        // MÃ©tricas Gerais
        const origemLow = origem.toLowerCase();
        if (origemLow.includes('ads') || origemLow.includes('instagram') || origemLow.includes('face') || origemLow.includes('google')) {
             // Ads
        } else {
            metrics.organicos++;
        }

        if (qualificado === 'sim') metrics.qualificados++;
        if (qualificado === 'nÃ£o') metrics.desqualificados++;
        
        if (venda === 'sim') {
            metrics.vendas++;
            metrics.faturamento += valorFloat;
            
            closedSalesList.push({
                cliente, valor: valorFloat, segmento, origem, vendedor
            });
        } else {
            // LÃ“GICA DE PERDA (Coluna J)
            // Se NÃƒO vendeu e tem algo escrito na coluna J
            if (motivoRaw.trim().length > 2) {
                // Padroniza o texto (Primeira letra maiÃºscula, resto igual)
                // Isso evita duplicar "PreÃ§o" e "preÃ§o"
                const motivoFormatado = motivoRaw.trim().charAt(0).toUpperCase() + motivoRaw.trim().slice(1).toLowerCase();
                lossCountMap[motivoFormatado] = (lossCountMap[motivoFormatado] || 0) + 1;
            }
        }

        // GrÃ¡ficos Charts
        chartData.origem[origem] = (chartData.origem[origem] || 0) + 1;
        chartData.segmento[segmento] = (chartData.segmento[segmento] || 0) + 1;
        chartData.vendedor[vendedor] = (chartData.vendedor[vendedor] || 0) + 1;

        if (origemLow.includes('ads') || origemLow.includes('patrocinado') || origemLow.includes('google')) {
            chartData.organicoVsAds.ads++;
        } else {
            chartData.organicoVsAds.org++;
        }
    });

    // Ordenar Vendas
    closedSalesList.sort((a, b) => b.valor - a.valor);

    // PROCESSAR TOP 5 MOTIVOS (Transformar o Mapa em Lista Ordenada)
    top5LossReasons = Object.entries(lossCountMap)
        .sort((a, b) => b[1] - a[1]) // Ordena do maior para o menor
        .slice(0, 5) // Pega sÃ³ os 5 primeiros
        .map(([motivo, qtd]) => ({ motivo, qtd }));

} catch (e) {
    errorMsg = "Erro ao carregar dados: " + e.message;
}

const chartsJSON = JSON.stringify(chartData);
---

<Layout title="Dashboard">
    <div class="flex flex-col md:flex-row justify-between items-end md:items-center mb-8 gap-4">
        <div>
            <h2 class="text-3xl font-bold text-gray-800">Dashboard Nicopel</h2>
            <p class="text-gray-500 text-sm">VisÃ£o Mensal: <span class="font-bold text-blue-600 uppercase">{realSheetName}</span></p>
        </div>
        
        <form method="GET" class="bg-white p-1.5 rounded-lg border shadow-sm flex items-center gap-2">
            <span class="text-xs font-bold text-gray-500 uppercase px-2">MÃªs:</span>
            <select name="month" onchange="this.form.submit()" class="bg-gray-100 border-transparent rounded text-sm font-bold text-gray-700 focus:ring-0 py-1 px-3 cursor-pointer h-9">
                {MONTHS.map(m => (
                    <option value={m} selected={m === selectedMonth}>{m}</option>
                ))}
            </select>
        </form>
    </div>

    {errorMsg && <div class="bg-red-100 text-red-700 p-4 rounded mb-4 font-bold">{errorMsg}</div>}

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-6 gap-4 mb-8">
        <Card title="Total Leads" value={metrics.total} color="blue" icon="ðŸ‘¥" />
        <Card title="OrgÃ¢nicos" value={metrics.organicos} color="green" icon="ðŸŒ¿" />
        <Card title="Qualificados" value={metrics.qualificados} color="indigo" icon="â­" />
        <Card title="Vendas" value={metrics.vendas} color="emerald" icon="ðŸ’°" />
        <Card title="Desqualificados" value={metrics.desqualificados} color="red" icon="ðŸš«" />
        <Card title="Faturamento" value={new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(metrics.faturamento)} color="yellow" icon="ðŸ’²" isMoney={true} />
    </div>

    <div class="grid grid-cols-1 xl:grid-cols-2 gap-6 mb-8">
        
        <div class="space-y-6">
            
            <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
                <h3 class="text-lg font-bold text-gray-800 mb-6 flex items-center gap-2">
                    Top 5 Motivos de Perda - {realSheetName}
                </h3>
                
                <div class="flex flex-col gap-3">
                    {top5LossReasons.length === 0 ? (
                        <p class="text-gray-400 text-sm text-center py-4">Nenhuma perda registrada com motivo.</p>
                    ) : (
                        top5LossReasons.map((item, index) => (
                            <div class={`flex justify-between items-center p-3 rounded-lg ${index === 1 ? 'bg-gray-50' : 'bg-white border-b border-gray-50'}`}>
                                <div class="flex gap-3 items-start">
                                    <span class="text-gray-400 font-bold min-w-[20px]">{index + 1}.</span>
                                    <span class="text-gray-700 text-sm font-medium leading-snug">{item.motivo}</span>
                                </div>
                                <span class="font-bold text-gray-800 ml-4">{item.qtd}</span>
                            </div>
                        ))
                    )}
                </div>
            </div>

            <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
                <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
                    ðŸ‘” Leads por Vendedor
                </h3>
                <div id="chart-vendedor" class="h-64"></div>
            </div>
        </div>

        <div class="space-y-6">
             <div class="grid grid-cols-1 md:grid-cols-2 gap-6 h-full">
                <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
                    <h4 class="text-xs font-bold text-gray-400 uppercase mb-4">Origem</h4>
                    <div id="chart-origem"></div>
                </div>
                <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
                    <h4 class="text-xs font-bold text-gray-400 uppercase mb-4">Segmentos</h4>
                    <div id="chart-segmento"></div>
                </div>
                <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 col-span-1 md:col-span-2">
                    <h4 class="text-xs font-bold text-gray-400 uppercase mb-4">OrgÃ¢nico vs Pago</h4>
                    <div id="chart-ads"></div>
                </div>
             </div>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden mb-12">
        <div class="p-6 border-b border-gray-200 bg-gray-50 flex justify-between items-center">
            <div>
                <h3 class="text-xl font-bold text-gray-800">ðŸ’° Vendas Fechadas - Detalhes</h3>
            </div>
            <span class="bg-green-100 text-green-800 text-xs font-bold px-3 py-1 rounded-full">
                {closedSalesList.length} Vendas
            </span>
        </div>
        
        <div class="overflow-x-auto max-h-[500px] overflow-y-auto">
            <table class="min-w-full text-sm text-left">
                <thead class="bg-gray-100 text-gray-600 font-bold uppercase text-xs sticky top-0 z-10 shadow-sm">
                    <tr>
                        <th class="px-6 py-4">Cliente</th>
                        <th class="px-6 py-4">Valor</th>
                        <th class="px-6 py-4">Segmento</th>
                        <th class="px-6 py-4">Origem</th>
                        <th class="px-6 py-4">Vendedor</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    {closedSalesList.length === 0 ? (
                        <tr><td colspan="5" class="p-8 text-center text-gray-400">Nenhuma venda neste mÃªs.</td></tr>
                    ) : (
                        closedSalesList.map(venda => (
                            <tr class="hover:bg-green-50 transition">
                                <td class="px-6 py-4 font-bold text-gray-800">{venda.cliente}</td>
                                <td class="px-6 py-4 font-mono font-bold text-green-700">
                                    {new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(venda.valor)}
                                </td>
                                <td class="px-6 py-4"><span class="bg-blue-50 text-blue-700 px-2 py-1 rounded text-xs font-bold">{venda.segmento}</span></td>
                                <td class="px-6 py-4 text-gray-600">{venda.origem}</td>
                                <td class="px-6 py-4 text-gray-500 text-xs uppercase font-bold">{venda.vendedor}</td>
                            </tr>
                        ))
                    )}
                </tbody>
            </table>
        </div>
    </div>

    <div id="chart-data" data-json={chartsJSON} class="hidden"></div>
    
    <script>
        const rawData = JSON.parse(document.getElementById('chart-data').dataset.json);
        const commonOpts = {
            chart: { type: 'bar', height: 250, toolbar: {show: false}, fontFamily: 'inherit' },
            colors: ['#3B82F6', '#10B981', '#F59E0B', '#EF4444', '#8B5CF6'],
            plotOptions: { bar: { borderRadius: 3, horizontal: true } },
            dataLabels: { enabled: false },
            grid: { strokeDashArray: 4 }
        };

        // 1. VENDEDORES
        const vends = Object.entries(rawData.vendedor).sort((a,b) => b[1] - a[1]);
        new ApexCharts(document.querySelector("#chart-vendedor"), {
            ...commonOpts,
            chart: { type: 'bar', height: 250, toolbar: {show: false} }, 
            plotOptions: { bar: { borderRadius: 3, horizontal: false, columnWidth: '50%' } },
            colors: ['#8B5CF6'],
            series: [{ name: 'Leads', data: vends.map(x => x[1]) }],
            xaxis: { categories: vends.map(x => x[0]) }
        }).render();

        // 2. ORIGEM
        new ApexCharts(document.querySelector("#chart-origem"), {
            series: Object.values(rawData.origem),
            labels: Object.keys(rawData.origem),
            chart: { type: 'donut', height: 220 },
            legend: { position: 'bottom', fontSize: '11px' },
            dataLabels: { enabled: false }
        }).render();

        // 3. SEGMENTO
        const segs = Object.entries(rawData.segmento).sort((a,b) => b[1] - a[1]).slice(0, 5);
        new ApexCharts(document.querySelector("#chart-segmento"), {
            ...commonOpts,
            chart: { type: 'bar', height: 220, toolbar: {show: false} },
            series: [{ name: 'Leads', data: segs.map(x => x[1]) }],
            xaxis: { categories: segs.map(x => x[0]) }
        }).render();

         // 4. ADS vs ORG
         new ApexCharts(document.querySelector("#chart-ads"), {
            series: [rawData.organicoVsAds.org, rawData.organicoVsAds.ads],
            labels: ['OrgÃ¢nico', 'Pago'],
            chart: { type: 'pie', height: 200 },
            colors: ['#10B981', '#3B82F6'],
            legend: { position: 'right' }
        }).render();
    </script>
</Layout>