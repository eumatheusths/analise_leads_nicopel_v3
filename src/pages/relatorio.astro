<Layout title="Relat√≥rios Anal√≠ticos">
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.31/jspdf.plugin.autotable.min.js"></script>

    <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-8 border-b border-slate-200 pb-6">
        <div>
            <h2 class="text-2xl font-bold text-slate-900 tracking-tight">Relat√≥rio de Desempenho</h2>
            <p class="text-sm text-slate-500">Consolidado Mensal: <span class="font-semibold text-slate-800 uppercase">{selectedMonth}</span></p>
        </div>
        
        <form class="flex gap-3 items-center bg-white p-1 rounded border border-slate-300 shadow-sm w-full md:w-auto">
            <span class="text-xs font-bold uppercase text-slate-400 pl-3">M√äS:</span>
            <select name="month" onchange="this.form.submit()" class="text-sm border-none bg-transparent font-medium text-slate-700 focus:ring-0 cursor-pointer outline-none w-full md:w-40">
                {MONTHS.map(m => <option value={m} selected={m === selectedMonth}>{m}</option>)}
            </select>
        </form>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
        <div class="bg-white p-4 rounded border border-slate-200 shadow-sm">
            <p class="text-xs font-bold text-slate-400 uppercase tracking-wider">Faturamento</p>
            <p class="text-xl font-bold text-emerald-700 mt-1">{new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(kpi.faturamento)}</p>
        </div>
        <div class="bg-white p-4 rounded border border-slate-200 shadow-sm">
            <p class="text-xs font-bold text-slate-400 uppercase tracking-wider">Total Vendas</p>
            <p class="text-xl font-bold text-slate-800 mt-1">{kpi.vendas} <span class="text-xs text-slate-400 font-normal">/ {kpi.leads} leads</span></p>
        </div>
        <div class="bg-white p-4 rounded border border-slate-200 shadow-sm">
            <p class="text-xs font-bold text-slate-400 uppercase tracking-wider">Ticket M√©dio</p>
            <p class="text-xl font-bold text-slate-800 mt-1">{new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(kpi.ticketMedio)}</p>
        </div>
        <div class="bg-white p-4 rounded border border-slate-200 shadow-sm">
            <p class="text-xs font-bold text-slate-400 uppercase tracking-wider">Convers√£o</p>
            <p class="text-xl font-bold text-blue-700 mt-1">{kpi.conversao.toFixed(1)}%</p>
        </div>
    </div>

    <div class="bg-white p-4 rounded shadow-sm border border-slate-200 mb-6 flex flex-col lg:flex-row gap-4 items-center justify-between">
        <div class="flex flex-col md:flex-row gap-4 w-full lg:w-auto flex-1 items-center">
            <div class="relative flex-1 w-full">
                <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-slate-400">üîç</span>
                <input type="text" id="searchInput" placeholder="Filtrar Cliente, Produto..." class="w-full pl-10 pr-4 py-2 border border-slate-300 rounded outline-none text-sm focus:border-slate-500 transition">
            </div>
            
            <select id="filterTrafego" class="border border-slate-300 rounded px-3 py-2 text-sm bg-slate-50 cursor-pointer outline-none w-full md:w-auto focus:border-slate-500">
                <option value="todos">üåç Todo Tr√°fego</option>
                <option value="pago">üöÄ Pagos</option>
                <option value="organico">üå± Org√¢nicos</option>
            </select>

            <select id="sortSelect" class="border border-slate-300 rounded px-3 py-2 text-sm bg-slate-50 cursor-pointer outline-none w-full md:w-auto focus:border-slate-500">
                <option value="recente">üìÖ Recentes</option>
                <option value="antiga">üìÖ Antigos</option>
                <option value="maior_valor">üí≤ Maior Valor</option>
                <option value="vendas">‚úÖ Apenas Vendas</option>
            </select>
        </div>

        <div class="flex gap-2 w-full lg:w-auto">
            <button id="btnExcel" class="flex-1 bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded text-xs font-bold uppercase tracking-wide transition shadow-sm flex items-center justify-center gap-2">Excel</button>
            <button id="btnPdf" class="flex-1 bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded text-xs font-bold uppercase tracking-wide transition shadow-sm flex items-center justify-center gap-2">PDF</button>
        </div>
    </div>

    <div class="bg-white shadow-sm rounded border border-slate-200 overflow-hidden overflow-x-auto">
        <table class="min-w-full text-xs text-left" id="reportTable">
            <thead class="bg-slate-800 text-slate-300 font-semibold uppercase">
                <tr>
                    <th class="px-4 py-3 whitespace-nowrap text-center">Ciclo</th>
                    <th class="px-4 py-3 whitespace-nowrap">Data</th>
                    <th class="px-4 py-3 whitespace-nowrap">Cliente</th>
                    <th class="px-4 py-3 whitespace-nowrap">Produto</th>
                    <th class="px-4 py-3 whitespace-nowrap">Origem</th>
                    <th class="px-4 py-3 whitespace-nowrap">Vendedor</th>
                    <th class="px-4 py-3 whitespace-nowrap text-center">Status Chat</th>
                    <th class="px-4 py-3 text-right whitespace-nowrap">Valor</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100 bg-white">
                {rows.map((row) => (
                    <tr class="data-row hover:bg-slate-50 transition"
                        data-search={String(`${row.cliente} ${row.telefone} ${row.vendedor} ${row.segmento} ${row.produto} ${row.origem} ${row.statusGuru}`).toLowerCase()}
                        data-nome={String(row.cliente).toLowerCase()} 
                        data-date={row.data} 
                        data-valor={row.valor} 
                        data-trafego={row.trafego}
                        data-venda={row.venda ? '1' : '0'}>
                        
                        <td class="px-4 py-2.5 text-center whitespace-nowrap">
                            {row.ciclo !== null ? (
                                <span class={`px-2 py-0.5 rounded text-[10px] font-bold border whitespace-nowrap
                                    ${row.ciclo <= 7 ? 'bg-emerald-50 text-emerald-700 border-emerald-100' : 
                                      row.ciclo <= 30 ? 'bg-yellow-50 text-yellow-700 border-yellow-100' : 
                                      'bg-red-50 text-red-700 border-red-100'}`}>
                                    {row.ciclo === 0 ? 'No dia' : row.ciclo + ' dias'}
                                </span>
                            ) : (
                                <span class="text-slate-300">-</span>
                            )}
                        </td>

                        <td class="px-4 py-2.5 text-slate-500 whitespace-nowrap font-mono">
                            {row.data.includes('-') ? row.data.split('-').reverse().join('/') : row.data}
                        </td>
                        
                        <td class="px-4 py-2.5 font-bold text-slate-800 whitespace-nowrap">{row.cliente}</td>
                        <td class="px-4 py-2.5 text-slate-600 whitespace-nowrap truncate max-w-[150px]" title={row.produto}>{row.produto}</td>
                        <td class="px-4 py-2.5 text-slate-500 whitespace-nowrap">{row.origem}</td>
                        <td class="px-4 py-2.5 text-slate-500 uppercase font-bold text-[10px] whitespace-nowrap">{row.vendedor}</td>
                        
                        <td class="px-4 py-2.5 text-center whitespace-nowrap">
                            <span class={`px-2 py-0.5 rounded text-[10px] font-bold border uppercase
                                ${String(row.statusGuru).includes('VENDA') || String(row.statusGuru).includes('GANHO') ? 'bg-emerald-50 text-emerald-700 border-emerald-100' : 
                                  String(row.statusGuru).includes('PERDIDO') ? 'bg-red-50 text-red-700 border-red-100' :
                                  String(row.statusGuru).includes('NEGOCIA') ? 'bg-yellow-50 text-yellow-700 border-yellow-100' : 
                                  'bg-slate-100 text-slate-500 border-slate-200'}`}>
                                {row.statusGuru}
                            </span>
                        </td>
                        
                        <td class="px-4 py-2.5 text-right font-mono font-medium text-slate-900 whitespace-nowrap">
                            {row.valor > 0 ? row.valorFmt : '-'}
                        </td>
                    </tr>
                ))}
                {rows.length === 0 && (<tr><td colspan="8" class="px-6 py-12 text-center text-slate-400">Nenhum registro encontrado para este m√™s.</td></tr>)}
            </tbody>
        </table>
    </div>

    <script define:vars={{ selectedMonth }}>
        const searchInput = document.getElementById('searchInput');
        const sortSelect = document.getElementById('sortSelect');
        const filterTrafego = document.getElementById('filterTrafego');
        const tableBody = document.querySelector('#reportTable tbody');
        let rows = Array.from(document.querySelectorAll('.data-row'));

        const removeAccents = (str) => {
            if (!str) return "";
            return String(str).normalize("NFD").replace(/[\u0300-\u036f]/g, "");
        };

        function filterAndSort() {
            const term = removeAccents(searchInput.value).toLowerCase().trim();
            const criteria = sortSelect.value;
            const trafego = filterTrafego.value;
            
            rows.forEach(row => {
                const rawSearch = row.getAttribute('data-search') || "";
                const text = removeAccents(rawSearch).toLowerCase();
                const rowTrafego = row.getAttribute('data-trafego');
                const isVenda = row.getAttribute('data-venda') === '1';
                
                let matches = text.includes(term);
                if (criteria === 'vendas' && !isVenda) matches = false;
                if (trafego !== 'todos' && rowTrafego !== trafego) matches = false;
                
                row.style.display = matches ? '' : 'none';
            });
            
            const visibleRows = rows.filter(r => r.style.display !== 'none');
            
            visibleRows.sort((a, b) => {
                const dateA = a.getAttribute('data-date') || '';
                const dateB = b.getAttribute('data-date') || '';
                const valA = parseFloat(a.getAttribute('data-valor') || '0');
                const valB = parseFloat(b.getAttribute('data-valor') || '0');
                
                if (criteria === 'recente') {
                    const d1 = dateA.includes('-') ? dateA.replace(/-/g, '') : dateA.split('/').reverse().join('');
                    const d2 = dateB.includes('-') ? dateB.replace(/-/g, '') : dateB.split('/').reverse().join('');
                    return d2.localeCompare(d1);
                }
                if (criteria === 'antiga') {
                    const d1 = dateA.includes('-') ? dateA.replace(/-/g, '') : dateA.split('/').reverse().join('');
                    const d2 = dateB.includes('-') ? dateB.replace(/-/g, '') : dateB.split('/').reverse().join('');
                    return d1.localeCompare(d2);
                }
                if (criteria === 'maior_valor') return valB - valA;
                return 0;
            });
            
            visibleRows.forEach(row => tableBody.appendChild(row));
        }

        searchInput.addEventListener('input', filterAndSort);
        sortSelect.addEventListener('change', filterAndSort);
        filterTrafego.addEventListener('change', filterAndSort);

        document.getElementById('btnExcel').addEventListener('click', () => {
            const wb = XLSX.utils.table_to_book(document.getElementById('reportTable'), { sheet: "Relatorio" });
            XLSX.writeFile(wb, `Nicopel_Relatorio_${selectedMonth}.xlsx`);
        });

        document.getElementById('btnPdf').addEventListener('click', () => {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF({ orientation: 'landscape' });
            doc.setFont("helvetica", "bold");
            doc.setFontSize(16); doc.text(`Relat√≥rio Gerencial - ${selectedMonth}`, 14, 20);
            doc.autoTable({ html: '#reportTable', startY: 30, styles: { fontSize: 7, cellPadding: 3 }, headStyles: { fillColor: [15, 23, 42] }, theme: 'grid' });
            doc.save(`Nicopel_Relatorio_${selectedMonth}.pdf`);
        });
    </script>
</Layout>