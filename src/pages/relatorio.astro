---
import Layout from '../layouts/Layout.astro';
import { getAuthSheets, SPREADSHEET_ID, getCurrentMonthSheetName, MONTHS, findRealSheetName } from '../lib/sheets';

const urlMonth = Astro.url.searchParams.get('month');
const selectedMonth = urlMonth || getCurrentMonthSheetName();
let rows = [];
let totalFaturamento = 0;
let totalVendas = 0;

try {
    const sheets = await getAuthSheets();
    const realName = await findRealSheetName(sheets, selectedMonth);
    if (!realName) throw new Error("Aba n√£o encontrada");

    const response = await sheets.spreadsheets.values.get({
        spreadsheetId: SPREADSHEET_ID,
        range: `'${realName}'!A2:L1000`, 
    });
    
    const rawData = response.data.values || [];
    rows = rawData.map((r, i) => {
        const valorLimpo = r[11] ? parseFloat(r[11].replace('R$', '').replace(/\./g, '').replace(',', '.').trim()) : 0;
        const isVenda = r[8]?.toLowerCase().trim() === 'sim';
        if (isVenda) { totalFaturamento += valorLimpo; totalVendas++; }
        return {
            raw: r, index: i,
            cliente: r[0] || '-', data: r[1] || '', origem: r[2] || '-', segmento: r[4] || '-',
            venda: isVenda, vendedor: r[10] || '-', valor: valorLimpo,
            valorFormatado: new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(valorLimpo)
        };
    }).reverse();
} catch (e) {}
---

<Layout title="Relat√≥rios e Exporta√ß√£o">
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.31/jspdf.plugin.autotable.min.js"></script>

    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6 gap-4">
        <div>
            <h2 class="text-2xl font-bold text-gray-800">Relat√≥rios Detalhados</h2>
            <p class="text-sm text-gray-500">Visualize dados de <span class="font-bold uppercase text-blue-600">{selectedMonth}</span></p>
        </div>
        
        <form class="flex gap-2 items-center bg-white p-2 rounded-lg border shadow-sm w-full md:w-auto">
            <span class="text-xs font-bold uppercase text-gray-400 whitespace-nowrap">M√™s:</span>
            <select name="month" onchange="this.form.submit()" class="text-sm border-none bg-transparent font-bold text-gray-700 focus:ring-0 cursor-pointer outline-none w-full">
                {MONTHS.map(m => <option value={m} selected={m === selectedMonth}>{m}</option>)}
            </select>
        </form>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
        <div class="bg-white p-4 rounded-lg border border-green-100 shadow-sm flex justify-between items-center">
            <div>
                <p class="text-xs font-bold text-green-600 uppercase">Faturamento</p>
                <p class="text-2xl font-bold text-gray-800">{new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(totalFaturamento)}</p>
            </div>
            <span class="text-3xl">üí∞</span>
        </div>
        <div class="bg-white p-4 rounded-lg border border-blue-100 shadow-sm flex justify-between items-center">
            <div>
                <p class="text-xs font-bold text-blue-600 uppercase">Vendas Fechadas</p>
                <p class="text-2xl font-bold text-gray-800">{totalVendas}</p>
            </div>
            <span class="text-3xl">ü§ù</span>
        </div>
    </div>

    <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-200 mb-6 flex flex-col lg:flex-row gap-4 items-center justify-between">
        <div class="flex flex-col md:flex-row gap-4 w-full lg:w-auto flex-1">
            <div class="relative flex-1 w-full">
                <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-400">üîç</span>
                <input type="text" id="searchInput" placeholder="Filtrar por cliente..." class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg outline-none text-sm">
            </div>
            <select id="sortSelect" class="border border-gray-300 rounded-lg px-3 py-2 text-sm bg-gray-50 cursor-pointer outline-none w-full md:w-auto">
                <option value="recente">üìÖ Data (Recente)</option>
                <option value="antiga">üìÖ Data (Antiga)</option>
                <option value="az">üî§ Nome (A-Z)</option>
                <option value="maior_valor">üí≤ Valor (Maior)</option>
                <option value="vendas">‚úÖ S√≥ Vendas</option>
            </select>
        </div>

        <div class="flex gap-3 w-full lg:w-auto">
            <button id="btnExcel" class="flex-1 flex items-center justify-center gap-2 bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg text-sm font-bold transition shadow-sm"><span>üìä</span> Excel</button>
            <button id="btnPdf" class="flex-1 flex items-center justify-center gap-2 bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg text-sm font-bold transition shadow-sm"><span>üìÑ</span> PDF</button>
        </div>
    </div>

    <div class="bg-white shadow rounded-lg overflow-hidden border border-gray-200 overflow-x-auto">
        <table class="min-w-full text-sm text-left" id="reportTable">
            <thead class="bg-slate-800 text-white font-bold uppercase text-xs">
                <tr>
                    <th class="px-4 py-3 whitespace-nowrap">Data</th>
                    <th class="px-4 py-3 whitespace-nowrap">Cliente</th>
                    <th class="px-4 py-3 whitespace-nowrap">Origem</th>
                    <th class="px-4 py-3 whitespace-nowrap">Segmento</th>
                    <th class="px-4 py-3 whitespace-nowrap">Vendedor</th>
                    <th class="px-4 py-3 text-right whitespace-nowrap">Valor</th>
                    <th class="px-4 py-3 text-center whitespace-nowrap">Status</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100 bg-white">
                {rows.map((row) => (
                    <tr class="data-row hover:bg-gray-50 transition"
                        data-search={`${row.cliente} ${row.vendedor} ${row.segmento} ${row.origem}`.toLowerCase()}
                        data-nome={row.cliente.toLowerCase()} data-date={row.data} data-valor={row.valor} data-venda={row.venda ? '1' : '0'}>
                        <td class="px-4 py-3 text-gray-500 whitespace-nowrap font-mono text-xs">{row.data.split('-').reverse().join('/')}</td>
                        <td class="px-4 py-3 font-bold text-gray-800 whitespace-nowrap">{row.cliente}</td>
                        <td class="px-4 py-3 text-gray-600 whitespace-nowrap">{row.origem}</td>
                        <td class="px-4 py-3 whitespace-nowrap"><span class="bg-blue-50 text-blue-600 px-2 py-0.5 rounded text-[10px] font-bold uppercase border border-blue-100">{row.segmento}</span></td>
                        <td class="px-4 py-3 text-gray-600 text-xs uppercase whitespace-nowrap">{row.vendedor}</td>
                        <td class="px-4 py-3 text-right font-mono font-medium text-gray-800 whitespace-nowrap">{row.valor > 0 ? row.valorFormatado : '-'}</td>
                        <td class="px-4 py-3 text-center whitespace-nowrap">
                            {row.venda ? <span class="bg-emerald-100 text-emerald-800 px-2 py-1 rounded-md text-xs font-bold">‚úÖ VENDA</span> : <span class="bg-gray-100 text-gray-500 px-2 py-1 rounded-md text-xs font-bold">‚≠ï ABERTO</span>}
                        </td>
                    </tr>
                ))}
                {rows.length === 0 && (<tr><td colspan="7" class="px-6 py-10 text-center text-gray-400">Nenhum dado encontrado.</td></tr>)}
            </tbody>
        </table>
    </div>

    <script define:vars={{ selectedMonth }}>
        const searchInput = document.getElementById('searchInput');
        const sortSelect = document.getElementById('sortSelect');
        const tableBody = document.querySelector('#reportTable tbody');
        let rows = Array.from(document.querySelectorAll('.data-row'));

        function filterAndSort() {
            const term = searchInput.value.toLowerCase();
            const criteria = sortSelect.value;
            rows.forEach(row => {
                const text = row.getAttribute('data-search');
                const isVenda = row.getAttribute('data-venda') === '1';
                let matches = text.includes(term);
                if (criteria === 'vendas' && !isVenda) matches = false;
                row.style.display = matches ? '' : 'none';
            });
            const visibleRows = rows.filter(r => r.style.display !== 'none');
            visibleRows.sort((a, b) => {
                const dateA = a.getAttribute('data-date') || '', dateB = b.getAttribute('data-date') || '';
                const valA = parseFloat(a.getAttribute('data-valor')), valB = parseFloat(b.getAttribute('data-valor'));
                const nomeA = a.getAttribute('data-nome'), nomeB = b.getAttribute('data-nome');
                if (criteria === 'recente') return dateB.localeCompare(dateA);
                if (criteria === 'antiga') return dateA.localeCompare(dateB);
                if (criteria === 'az') return nomeA.localeCompare(nomeB);
                if (criteria === 'maior_valor') return valB - valA;
                if (criteria === 'menor_valor') return valA - valB;
                return 0;
            });
            visibleRows.forEach(row => tableBody.appendChild(row));
        }

        searchInput.addEventListener('input', filterAndSort);
        sortSelect.addEventListener('change', filterAndSort);

        document.getElementById('btnExcel').addEventListener('click', () => {
            const wb = XLSX.utils.table_to_book(document.getElementById('reportTable'), { sheet: "Relatorio" });
            XLSX.writeFile(wb, `Nicopel_Relatorio_${selectedMonth}.xlsx`);
        });

        document.getElementById('btnPdf').addEventListener('click', () => {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF({ orientation: 'landscape' });
            doc.setFontSize(18); doc.text(`Relat√≥rio - ${selectedMonth}`, 14, 20);
            doc.autoTable({ html: '#reportTable', startY: 35, styles: { fontSize: 7 }, headStyles: { fillColor: [30, 41, 59] } });
            doc.save(`Nicopel_Relatorio_${selectedMonth}.pdf`);
        });
    </script>
</Layout>