---
// src/layouts/Layout.astro
const { title } = Astro.props;

let userName = 'Admin';
if (Astro.cookies.has('nicopel_session')) {
    try {
        const session = JSON.parse(Astro.cookies.get('nicopel_session').value);
        userName = session.nome || 'Admin';
    } catch (e) {}
}
---

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>{title} | Nicopel System</title>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        body { font-family: 'Inter', sans-serif; }
        .scrollbar-hide::-webkit-scrollbar { display: none; }
        .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }
    </style>
</head>
<body class="bg-[#f1f5f9] text-slate-800 flex h-screen overflow-hidden">

    <div id="mobile-overlay" class="fixed inset-0 bg-slate-900/80 z-30 hidden transition-opacity lg:hidden"></div>

    <aside id="sidebar" class="fixed inset-y-0 left-0 w-64 bg-[#0f172a] text-slate-300 flex flex-col justify-between z-40 transform -translate-x-full transition-transform duration-300 ease-in-out lg:translate-x-0 lg:static lg:inset-auto border-r border-slate-800">
        
        <div class="flex-1 overflow-y-auto scrollbar-hide">
            <div class="h-16 flex items-center px-6 border-b border-slate-800 bg-[#020617]">
                <span class="font-bold text-white text-lg tracking-tight">NICOPEL <span class="text-slate-500 font-normal">DATA</span></span>
            </div>
            
            <nav class="mt-6 px-3 space-y-1">
                <a href="/" class="nav-item group">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/></svg>
                    <span>Dashboard</span>
                </a>
                <a href="/adicionar" class="nav-item group">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
                    <span>Novo Lead</span>
                </a>
                <a href="/editar" class="nav-item group">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
                    <span>Gerenciar Leads</span>
                </a>
                <a href="/relatorio" class="nav-item group">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
                    <span>Relatórios</span>
                </a>
                <a href="/roi" class="nav-item group">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                    <span>Financeiro (ROI)</span>
                </a>
            </nav>
        </div>
        
        <div class="p-4 border-t border-slate-800 bg-[#020617]">
            <div class="flex items-center gap-3 mb-3">
                <div class="w-8 h-8 rounded bg-slate-700 flex items-center justify-center text-xs text-white font-bold">
                    {userName.charAt(0).toUpperCase()}
                </div>
                <div class="overflow-hidden">
                    <p class="text-xs font-medium text-slate-400">Usuário</p>
                    <p class="text-white text-xs font-bold truncate">{userName}</p>
                </div>
            </div>
            <a href="/logout" class="block w-full py-2 text-center text-xs font-semibold text-red-400 border border-red-900/30 bg-red-900/10 hover:bg-red-900/20 rounded transition">
                SAIR
            </a>
        </div>
    </aside>

    <main class="flex-1 flex flex-col h-full w-full relative">
        <header class="h-16 bg-white border-b border-slate-200 flex items-center justify-between px-4 lg:hidden shrink-0 shadow-sm z-20">
            <div class="flex items-center gap-3">
                <button id="open-sidebar" class="text-slate-600 p-2 -ml-2 hover:bg-slate-100 rounded">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
                </button>
                <span class="font-bold text-slate-800">NICOPEL</span>
            </div>
        </header>

        <div class="flex-1 overflow-y-auto overflow-x-hidden p-6 md:p-8 scroll-smooth">
            <slot />
        </div>
    </main>

    <style>
        .nav-item {
            @apply flex items-center gap-3 px-3 py-2.5 rounded text-sm font-medium text-slate-400 hover:text-white hover:bg-slate-800 transition-colors duration-200;
        }
    </style>

    <script>
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('mobile-overlay');
        const openBtn = document.getElementById('open-sidebar');

        function toggleMenu() {
            sidebar.classList.toggle('-translate-x-full');
            overlay.classList.toggle('hidden');
        }

        if(openBtn) openBtn.addEventListener('click', toggleMenu);
        if(overlay) overlay.addEventListener('click', toggleMenu);
    </script>
</body>
</html>